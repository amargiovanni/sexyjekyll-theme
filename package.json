{
  "name": "sexyjekyll-theme",
  "version": "1.3.0",
  "description": "A modern, feature-rich Jekyll theme with ES6 modules",
  "main": "js/main.js",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint 'js/**/*.js'",
    "lint:css": "stylelint 'css/**/*.css'",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:css -- --fix",
    "format": "prettier --write 'js/**/*.js' 'css/**/*.css' '*.md' 'docs/**/*.md'",
    "format:check": "prettier --check 'js/**/*.js' 'css/**/*.css' '*.md' 'docs/**/*.md'",
    "validate": "npm run lint && npm run test && npm run format:check",
    "prepare": "husky"
  },
  "keywords": [
    "jekyll",
    "theme",
    "blog",
    "responsive",
    "es6-modules",
    "accessibility"
  ],
  "author": "Andrea Margiovanni",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/amargiovanni/sexyjekyll-theme.git"
  },
  "bugs": {
    "url": "https://github.com/amargiovanni/sexyjekyll-theme/issues"
  },
  "homepage": "https://github.com/amargiovanni/sexyjekyll-theme#readme",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@testing-library/dom": "^9.3.0",
    "@testing-library/jest-dom": "^6.1.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.4.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.0.0",
    "stylelint": "^15.10.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-order": "^6.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "transform": {},
    "collectCoverageFrom": [
      "js/modules/**/*.js",
      "!js/modules/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ],
    "*.rb": [
      "bundle exec rubocop -A"
    ]
  }
}
